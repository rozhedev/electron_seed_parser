<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to access the network -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow the app to write and read files on the disk -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Enable the hardened runtime -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Allow JIT execution for Electron -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>


    <!-- Allow debugging tools to attach (useful for development) -->
    <key>com.apple.security.cs.debugger</key>
    <true/>

    <!-- Required for accessing microphone -->
    <key>com.apple.security.device.microphone</key>
    <false/>

    <!-- Required for accessing the camera -->
    <key>com.apple.security.device.camera</key>
    <false/>
</dict>
</plist>
